    padding-right: 0;
    border-radius: 5px;
    list-style: none;
    height: fit-content;
    scroll-target-group: auto;
  }
  @media (min-width: 800px) {
    .scrollspy {
      position: sticky;
      top: 15px;
    }
  }

  .scrollspy-item {
    display: block;
