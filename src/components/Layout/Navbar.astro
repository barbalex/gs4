---
const pathname = Astro.url.pathname
---

<>
  <nav role="navigation" class="navbar">
    <a href="/" class:list={['navbar-brand', { active: pathname === '/' }]}
      >Gabriel Software</a
    >
    <div class="nav-menus">
      <div class="nav">
        <a
          href="/leitbild/"
          class:list={['nav-link', { active: pathname === '/leitbild/' }]}
          >Leitbild</a
        >
      </div>
      <div class="nav">
        <a
          href="/projekte/"
          class:list={['nav-link', { active: pathname === '/projekte/' }]}
          >Projekte</a
        >
      </div>
      <div class="nav">
        <a
          href="/technologien/"
          class:list={['nav-link', { active: pathname === '/technologien/' }]}
          >Technologien</a
        >
      </div>
      <div class="nav">
        <a
          href="/kontakt/"
          class:list={['nav-link', { active: pathname === '/kontakt/' }]}
          >Kontakt</a
        >
      </div>
    </div>
  </nav>
  <div class="scroll-container">
    <div class="container">
      <slot />
    </div>
  </div>
</>
<style>
  .navbar {
    min-height: 56px;
    position: sticky;
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    flex-wrap: wrap;
    padding: 0 6px 0 0;
    background-color: #145f00 !important;
  }
  .navbar-brand {
    font-size: 1.5rem;
    font-weight: 500;
    color: rgba(255, 255, 255, 0.7);
    text-decoration: none;
    padding: 14px 0 0 12px;
  }
  .navbar-brand.active {
    font-weight: 600;
    color: white;
  }
  .navbar-brand:hover {
    color: white;
  }
  .nav-menus {
    display: flex;
    flex-wrap: wrap;
  }
  .nav {
    padding: 12px;
  }
  .nav-link {
    text-decoration: none;
    color: rgba(255, 255, 255, 0.7);
  }
  .nav-link.active {
    font-weight: 700;
    color: white;
  }
  .nav-link:hover {
    color: white;
  }
  .scroll-container {
    overflow-y: auto;
    overflow-x: hidden;
    height: calc(100% - 56px);
    scroll-snap-type: none;
    scroll-padding: 12px;
    scroll-behavior: smooth;
    scrollbar-gutter: stable;
  }
  .container {
    margin: 0 auto;
    max-width: 1170px;
  }
</style>
